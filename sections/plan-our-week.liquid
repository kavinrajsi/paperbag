{% liquid
  assign section_heading = section.settings.heading | default: 'Plan Our Week'
  assign section_subheading = section.settings.subheading
%}

<section id="plan-our-week-{{ section.id }}" class="plan-our-week">
  <div class="plan-our-week__inner">
    {% if section_heading != blank or section_subheading != blank %}
      <header class="plan-our-week__header">
        {% if section_heading != blank %}
          <h2 class="plan-our-week__title">{{ section_heading | escape }}</h2>
        {% endif %}

        {% if section_subheading != blank %}
          <p class="plan-our-week__subtitle">{{ section_subheading }}</p>
        {% endif %}
      </header>
    {% endif %}

    <div class="plan-our-week__grid">
      {% for block in section.blocks %}
        {% liquid
          assign block_image = block.settings.image
          assign block_alt = block.settings.image_alt | default: block.settings.title
          assign block_title = block.settings.title | default: 'Activity'
          assign block_url = block.settings.url
          assign open_in_new_tab = block.settings.open_in_new_tab
          assign link_target = open_in_new_tab | default: false
        %}

        {% liquid
          if block_url != blank and open_in_new_tab
            assign target_attr = '_blank'
            assign rel_attr = 'noopener noreferrer'
          elsif block_url != blank
            assign target_attr = '_self'
            assign rel_attr = ''
          else
            assign target_attr = ''
            assign rel_attr = ''
          endif
        %}

        <article class="plan-our-week__card" {{ block.shopify_attributes }}>
          {% if block_image %}
            <div class="plan-our-week__media">
              {{ block_image | image_url: width: 900 | image_tag: loading: 'lazy', class: 'plan-our-week__image', alt: block_alt | escape }}
            </div>
          {% else %}
            <div class="plan-our-week__media plan-our-week__media--placeholder" aria-hidden="true">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}

          <div class="plan-our-week__content">
            {% if block_title != blank %}
              {% if block_url != blank %}
                <a class="plan-our-week__link" href="{{ block_url }}" target="{{ target_attr }}" {% if rel_attr != blank %}rel="{{ rel_attr }}"{% endif %}>
                  {{ block_title | escape }}
                </a>
              {% else %}
                <span class="plan-our-week__label">{{ block_title | escape }}</span>
              {% endif %}
            {% endif %}
          </div>
        </article>
      {% else %}
        <div class="plan-our-week__empty">
          <p>Add plan blocks to get started.</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .plan-our-week {
    padding: 64px 16px;
    background: var(--color-page-background, #fff);
  }

  .plan-our-week__inner {
    max-width: 1200px;
    margin: 0 auto;
  }

  .plan-our-week__header {
    text-align: center;
    margin-bottom: 40px;
  }

  .plan-our-week__title {
    margin: 0 0 12px;
    font-size: clamp(1.75rem, 3vw, 2.75rem);
  }

  .plan-our-week__subtitle {
    margin: 0;
    color: rgba(0, 0, 0, 0.72);
    line-height: 1.6;
  }

  .plan-our-week__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 24px;
  }

  .plan-our-week__card {
    display: flex;
    flex-direction: column;
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 12px 32px rgba(18, 18, 18, 0.08);
    transition: transform 200ms ease, box-shadow 200ms ease;
    min-height: 100%;
  }

  .plan-our-week__card:hover {
    transform: translateY(-4px);
    box-shadow: 0 16px 36px rgba(18, 18, 18, 0.16);
  }

  .plan-our-week__media {
    width: 100%;
    aspect-ratio: 4 / 3;
    background: rgba(0, 0, 0, 0.04);
  }

  .plan-our-week__media--placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .plan-our-week__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .plan-our-week__content {
    padding: 24px;
  }

  .plan-our-week__link,
  .plan-our-week__label {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-height: 48px;
    padding: 0 20px;
    border-radius: 999px;
    font-size: 1rem;
    text-align: center;
  }

  .plan-our-week__link {
    color: inherit;
    text-decoration: none;
    border: 1px solid currentColor;
    transition: background 200ms ease, color 200ms ease;
  }

  .plan-our-week__link:hover {
    background: currentColor;
    color: #fff;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Plan Our Week",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Plan Our Week"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Map out each day with curated ideas and inspiration."
    }
  ],
  "blocks": [
    {
      "type": "plan_item",
      "name": "Plan item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "image_alt",
          "label": "Image alt text"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Schedule activity"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link URL"
        },
        {
          "type": "checkbox",
          "id": "open_in_new_tab",
          "label": "Open link in new tab"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Plan Our Week",
      "blocks": [
        {
          "type": "plan_item",
          "settings": {
            "title": "Meal prep ideas"
          }
        },
        {
          "type": "plan_item",
          "settings": {
            "title": "Weekend activities"
          }
        },
        {
          "type": "plan_item",
          "settings": {
            "title": "Shopping list"
          }
        }
      ]
    }
  ]
}
{% endschema %}
