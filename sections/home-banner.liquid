{% liquid
  assign section_classes = 'section-home-banner'
  if section.settings.full_bleed
    assign section_classes = section_classes | append: ' section-home-banner--full'
  endif
%}

<div class="{{ section_classes }}">
  {% render 'home-banner',
    desktop_image: section.settings.desktop_image,
    tablet_image: section.settings.tablet_image,
    mobile_image: section.settings.mobile_image,
    heading: section.settings.heading,
    subheading: section.settings.subheading,
    body: section.settings.body,
    cta_label: section.settings.cta_label,
    cta_url: section.settings.cta_url,
    show_content: section.settings.show_content,
    class: section.settings.custom_class,
    alt: section.settings.alt_text
  %}
</div>

{% schema %}
{
  "name": "Home banner",
  "settings": [
    {
      "type": "header",
      "content": "Banner image"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop image",
      "info": "Required. Recommended width 2000px."
    },
    {
      "type": "image_picker",
      "id": "tablet_image",
      "label": "Tablet image",
      "info": "Optional. Recommended width 1600px."
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile image",
      "info": "Optional. Recommended width 900px."
    },
    {
      "type": "text",
      "id": "alt_text",
      "label": "Image alt text",
      "info": "Describe the banner imagery for accessibility."
    },
    {
      "type": "header",
      "content": "Banner content"
    },
    {
      "type": "checkbox",
      "id": "show_content",
      "label": "Show text content",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Modern essentials"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Eyebrow",
      "default": "New arrivals"
    },
    {
      "type": "richtext",
      "id": "body",
      "label": "Supporting copy",
      "default": "<p>Pair easy silhouettes with elevated textures for everyday comfort.</p>"
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "CTA label",
      "default": "Shop the drop"
    },
    {
      "type": "header",
      "content": "Banner link"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA link"
    },
    {
      "type": "header",
      "content": "Settings"
    },
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom CSS class"
    },
    {
      "type": "checkbox",
      "id": "full_bleed",
      "label": "Edge-to-edge layout",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Home banner",
      "category": "Hero"
    }
  ]
}
{% endschema %}
