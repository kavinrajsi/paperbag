{% liquid
  assign section_title = section.settings.heading | default: 'Our Collections'
  assign section_description = section.settings.description
%}

<section id="our-collections-{{ section.id }}" class="our-collections">
  <div class="our-collections__inner">
    {% if section_title != blank or section_description != blank %}
      <header class="our-collections__header">
        {% if section_title != blank %}
          <h2 class="our-collections__title">{{ section_title | escape }}</h2>
        {% endif %}

        {% if section_description != blank %}
          <div class="our-collections__description">
            {{ section_description }}
          </div>
        {% endif %}
      </header>
    {% endif %}

    <div class="our-collections__grid">
      {% for block in section.blocks %}
        {% liquid
          assign desktop_image = block.settings.desktop_image
          assign mobile_image = block.settings.mobile_image | default: desktop_image
          assign block_title = block.settings.title | default: 'Featured collection'
          assign block_image_alt = block.settings.image_alt | default: block_title
          assign block_link = block.settings.button_link
        %}

        <article class="our-collections__card" {{ block.shopify_attributes }}>
          <div class="our-collections__media">
            {% if desktop_image %}
              <picture class="our-collections__picture">
                {% if mobile_image %}
                  <source
                    media="(max-width: 749px)"
                    srcset="{{ mobile_image | image_url: width: 900 }}"
                  >
                {% endif %}
                {{ desktop_image | image_url: width: 1600 | image_tag: loading: 'lazy', class: 'our-collections__image', alt: block_image_alt | escape }}
              </picture>
            {% else %}
              <div class="our-collections__media-placeholder" aria-hidden="true">
                {{ 'collection-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>

          <div class="our-collections__body">
            {% if block_title != blank %}
              <h3 class="our-collections__collection-title">
                {% if block_link != blank %}
                  <a class="our-collections__collection-link" href="{{ block_link }}">
                    {{ block_title | escape }}
                  </a>
                {% else %}
                  {{ block_title | escape }}
                {% endif %}
              </h3>
            {% endif %}

            {% if block.settings.button_label != blank and block_link != blank %}
              <a class="our-collections__cta" href="{{ block_link }}">
                {{ block.settings.button_label | escape }}
              </a>
            {% endif %}
          </div>
        </article>
      {% else %}
        <div class="our-collections__empty">
          <p>Add collection blocks to showcase here.</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .our-collections {
    padding: 64px 16px;
    background: var(--color-page-background, #fff);
  }

  .our-collections__inner {
    max-width: 1200px;
    margin: 0 auto;
  }

  .our-collections__header {
    text-align: center;
    margin-bottom: 40px;
  }

  .our-collections__title {
    margin: 0 0 16px;
    font-size: clamp(1.75rem, 3vw, 2.75rem);
  }

  .our-collections__description {
    color: rgba(0, 0, 0, 0.72);
    line-height: 1.6;
  }

  .our-collections__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 24px;
  }

  .our-collections__card {
    display: flex;
    flex-direction: column;
    background: #fff;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(18, 18, 18, 0.08);
    transition: transform 200ms ease, box-shadow 200ms ease;
    min-height: 100%;
  }

  .our-collections__card:hover {
    transform: translateY(-4px);
    box-shadow: 0 14px 36px rgba(18, 18, 18, 0.12);
  }

  .our-collections__media {
    width: 100%;
    aspect-ratio: 4 / 3;
    background: rgba(0, 0, 0, 0.04);
  }

  .our-collections__picture,
  .our-collections__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .our-collections__media-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.04);
  }

  .our-collections__body {
    padding: 24px;
    display: flex;
    flex-direction: column;
    gap: 16px;
    flex-grow: 1;
  }

  .our-collections__collection-title {
    margin: 0;
    font-size: 1.125rem;
  }

  .our-collections__collection-link {
    color: inherit;
    text-decoration: none;
  }

  .our-collections__collection-link:hover {
    text-decoration: underline;
  }

  .our-collections__cta {
    align-self: flex-start;
    padding: 10px 20px;
    border: 1px solid currentColor;
    border-radius: 999px;
    text-decoration: none;
    font-size: 0.95rem;
    transition: background 200ms ease, color 200ms ease;
  }

  .our-collections__cta:hover {
    background: currentColor;
    color: #fff;
  }

  .our-collections__empty {
    grid-column: 1 / -1;
    text-align: center;
    padding: 48px;
    border: 1px dashed rgba(0, 0, 0, 0.2);
    border-radius: 8px;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Our collections",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Our Collections"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Section description",
      "default": "<p>Discover curated collections tailored for every moment.</p>"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection block",
      "settings": [
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Custom title"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Shop now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "header",
          "content": "Image"
        },
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile image",
          "info": "Optional override for small screens"
        },
        {
          "type": "text",
          "id": "image_alt",
          "label": "Image alt text"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Our collections",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}
